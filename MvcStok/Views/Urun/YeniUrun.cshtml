@model MvcStok.Models2.Tblurunler

@{
    ViewData["Title"] = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="Urunad" placeholder="Lütfen buraya ürün adını giriniz..." required="" />
    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="Marka" placeholder="Lütfen buraya marka adını giriniz..." required="" />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.Urunkategori, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="Fiyat" placeholder="Lütfen buraya ürün fiyatını giriniz..." required="" />
    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="Stok" placeholder="Lütfen buraya stok adedini giriniz..." required="" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>


